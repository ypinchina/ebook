$baseFontSize = 37.5; //默认基准font-size
px2rem($px){
  $px / $baseFontSize * 1rem;
}
center() {
  display flex
  align-items center
  justify-content center
}
.icon
  font-family "iconfont" !important
  font-size px2rem(60)
  font-style normal
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color #333
.slide-down-enter,.slide-down-leave-to
  transform translate3d(0, -100%, 0)
.slide-up-enter,.slide-up-leave-to
  transform translate3d(0, px2rem(220), 0)
.slide-down-enter-active,.slide-up-enter-active,.slide-down-leave-active,.slide-up-leave-active
  transition all 0.2s linear
.slide-down-enter-to, .slide-down-leave, .slide-up-enter-to, .slide-up-leave
  transform translate3d(0, 0, 0)